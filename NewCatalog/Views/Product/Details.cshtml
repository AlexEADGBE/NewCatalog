@model Product

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-6">
        <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid" />
    </div>
    <div class="col-md-6">
        <p><strong>Категорія:</strong> @Model.Category?.Name</p>
        <p><strong>Опис:</strong> @Model.Description</p>
        <p><strong>Ціна:</strong> @Model.Price грн</p>
    </div>
</div>
